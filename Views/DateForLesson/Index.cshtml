@model IEnumerable<ekipage.Models.DateForLesson>

@{
    ViewData["Title"] = "Datum och lektionstyp";
}

<h1>Datum och lektionstyp</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonContent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonContent.Lesson)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DateForLessonId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
