@model ekipage.Models.DateForLesson

@{
    ViewData["Title"] = "Byt datum";
}

<h1>Nästa lektion</h1>

<h2>Kommande datum och lektionsinnehåll</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DateForLessonId" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonContentId" class="control-label">Typ av lektion:</label>
                <select asp-for="LessonContentId" class="form-control" asp-items="ViewBag.LessonContentId"></select>
                <span asp-validation-for="LessonContentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Gå tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
